<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#78909C"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_back_white" />

        <EditText
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CFD8DC"
            android:gravity="center_horizontal"
            android:hint="@string/title"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#607D8B"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/palette_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="8dp"
            android:src="@drawable/color_palette" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <ListView
            android:id="@+id/items_lv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:choiceMode="none" />

        <LinearLayout
            android:id="@+id/linear_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CFD8DC"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/new_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/new_item"
                android:lines="1"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#607D8B"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/add_item_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_forward_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_update_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CFD8DC"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cancel_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_cancel_black" />

            <EditText
                android:id="@+id/edittext_update"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/update_item"
                android:lines="1"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#607D8B"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ok_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_check_black" />
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/colors_hs"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#000000">

        <LinearLayout
            android:id="@+id/linear_colors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="#FFFFFF"
                android:scaleType="centerInside"
                android:src="@drawable/ic_color_lens_black" />

            <ImageView
                android:id="@+id/imageview1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="#F44336"
                android:scaleType="centerInside"
                android:src="@drawable/ic_color_lens_black" />

            <ImageView
                android:id="@+id/imageview2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="#BA68C8"
                android:scaleType="centerInside"
                android:src="@drawable/ic_color_lens_black" />

            <ImageView
                android:id="@+id/imageview3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="#5C6BC0"
                android:scaleType="centerInside"
                android:src="@drawable/ic_color_lens_black" />

            <ImageView
                android:id="@+id/imageview4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="#42A5F5"
                android:scaleType="centerInside"
                android:src="@drawable/ic_color_lens_black" />

            <ImageView
                android:id="@+id/imageview5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="#4CAF50"
                android:scaleType="centerInside"
                android:src="@drawable/ic_color_lens_black" />

            <ImageView
                android:id="@+id/imageview6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="#FFEE58"
                android:scaleType="centerInside"
                android:src="@drawable/ic_color_lens_black" />

            <ImageView
                android:id="@+id/imageview7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="#FFCA28"
                android:scaleType="centerInside"
                android:src="@drawable/ic_color_lens_black" />

            <ImageView
                android:id="@+id/imageview8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="#FF9800"
                android:scaleType="centerInside"
                android:src="@drawable/ic_color_lens_black" />

            <ImageView
                android:id="@+id/imageview9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="#A1887F"
                android:scaleType="centerInside"
                android:src="@drawable/ic_color_lens_black" />

            <ImageView
                android:id="@+id/imageview10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="#78909C"
                android:scaleType="centerInside"
                android:src="@drawable/ic_color_lens_black" />
        </LinearLayout>
    </HorizontalScrollView>

    <ListView
        android:id="@+id/colors_lv"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:visibility="gone"/>
</LinearLayout>
