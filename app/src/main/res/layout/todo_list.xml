<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear_toolbar"
		android:layout_width="match_parent"
		android:layout_height="56dp"
		android:background="#78909C"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/back_iv"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_margin="8dp"
			android:src="@drawable/ic_arrow_back_white"
			android:scaleType="center"/>
		<EditText
			android:id="@+id/title"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:background="#CFD8DC"
			android:gravity="center_horizontal"
			android:textSize="25sp"
			android:textColor="#000000"
			android:hint="@string/title"
			android:textColorHint="#607D8B"
			android:singleLine="true"
			android:imeOptions="actionNext"
			android:layout_weight="1"/>
		<ImageView
			android:id="@+id/palette_iv"
			android:layout_width="45dp"
			android:layout_height="45dp"
			android:layout_margin="8dp"
			android:src="@drawable/color_palette"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/linear_all"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:orientation="vertical">
		<ListView
			android:id="@+id/items_lv"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:choiceMode="none"
			android:layout_weight="1"/>
		<LinearLayout
			android:id="@+id/linear_add"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#CFD8DC"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<EditText
				android:id="@+id/new_item"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:textSize="16sp"
				android:textColor="#000000"
				android:hint="@string/new_item"
				android:textColorHint="#607D8B"
				android:lines="1"
				android:layout_weight="1"/>
			<ImageView
				android:id="@+id/add_item_iv"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:src="@drawable/ic_forward_black"
				android:gravity="center_horizontal|center_vertical"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear_update_item"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#CFD8DC"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/cancel_iv"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:src="@drawable/ic_cancel_black"
				android:scaleType="centerInside"/>
			<EditText
				android:id="@+id/edittext_update"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:textSize="16sp"
				android:textColor="#000000"
				android:hint="@string/update_item"
				android:textColorHint="#607D8B"
				android:lines="1"
				android:layout_weight="1"/>
			<ImageView
				android:id="@+id/ok_iv"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:src="@drawable/ic_check_black"
				android:gravity="center_horizontal|center_vertical"/>
		</LinearLayout>
	</LinearLayout>
	<HorizontalScrollView
		android:id="@+id/colors_hs"
		android:layout_width="match_parent"
		android:layout_height="56dp"
		android:background="#000000">
		<LinearLayout
			android:id="@+id/linear_colors"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_gravity="center_vertical">
			<ImageView
				android:id="@+id/imageview0"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="2dp"
				android:background="#FFFFFF"
				android:src="@drawable/ic_color_lens_black"
				android:scaleType="centerInside"/>
			<ImageView
				android:id="@+id/imageview1"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="2dp"
				android:background="#F44336"
				android:src="@drawable/ic_color_lens_black"
				android:scaleType="centerInside"/>
			<ImageView
				android:id="@+id/imageview2"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="2dp"
				android:background="#BA68C8"
				android:src="@drawable/ic_color_lens_black"
				android:scaleType="centerInside"/>
			<ImageView
				android:id="@+id/imageview3"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="2dp"
				android:background="#5C6BC0"
				android:src="@drawable/ic_color_lens_black"
				android:scaleType="centerInside"/>
			<ImageView
				android:id="@+id/imageview4"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="2dp"
				android:background="#42A5F5"
				android:src="@drawable/ic_color_lens_black"
				android:scaleType="centerInside"/>
			<ImageView
				android:id="@+id/imageview5"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="2dp"
				android:background="#4CAF50"
				android:src="@drawable/ic_color_lens_black"
				android:scaleType="centerInside"/>
			<ImageView
				android:id="@+id/imageview6"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="2dp"
				android:background="#FFEE58"
				android:src="@drawable/ic_color_lens_black"
				android:scaleType="centerInside"/>
			<ImageView
				android:id="@+id/imageview7"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="2dp"
				android:background="#FFCA28"
				android:src="@drawable/ic_color_lens_black"
				android:scaleType="centerInside"/>
			<ImageView
				android:id="@+id/imageview8"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="2dp"
				android:background="#FF9800"
				android:src="@drawable/ic_color_lens_black"
				android:scaleType="centerInside"/>
			<ImageView
				android:id="@+id/imageview9"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="2dp"
				android:background="#A1887F"
				android:src="@drawable/ic_color_lens_black"
				android:scaleType="centerInside"/>
			<ImageView
				android:id="@+id/imageview10"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="2dp"
				android:background="#78909C"
				android:src="@drawable/ic_color_lens_black"
				android:scaleType="centerInside"/>
		</LinearLayout>
	</HorizontalScrollView>
</LinearLayout>
